<%= form_with model: [ @sheet , @column] do |form| %>
    <%= form.text_field :title, class: 'shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline', placeholder: "Title" %>
    <%= form.select :data_type, options_for_select(['String', 'Integer', 'Date', 'Boolean']), {}, class: 'shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline',  include_blank: "Data Type" %>
    <%= form.submit class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
<% end %>

